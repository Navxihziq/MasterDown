<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="bottom"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:header"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:align_parent_start="true">

        <Text
            ohos:id="$+id:header_title_text"
            ohos:height="match_parent"
            ohos:width="200vp"
            ohos:text_size="20fp"
            ohos:text_alignment="vertical_center"
            ohos:left_margin="20vp"
            ohos:text="Title"/>

        <DependentLayout
            ohos:id="$+id:header_button_area"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:right_of="$id:header_title_text"
            ohos:orientation="horizontal">
            <Image
                ohos:id="$+id:new_file_button"
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:align_parent_end="true"
                ohos:right_margin="10vp"
                ohos:scale_mode="zoom_center"
                ohos:vertical_center="true"
                ohos:image_src="$media:new_file"
                ohos:clickable="true"
                />

        </DependentLayout>

    </DependentLayout>

    <TabList
        ohos:id="$+id:bottom_nav_bar"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal"

        ohos:background_element="#C902062B"
        ohos:text_size="18vp"
        ohos:text_alignment="center"
        ohos:fixed_mode="true"

        ohos:selected_text_color="#FFF3F8FF"
    />


    <StackLayout
        ohos:id="$+id:stack_layout"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:text_size="16fp"
        ohos:layout_alignment="center"
        ohos:text_alignment="center"
        ohos:above="$id:bottom_nav_bar"
        ohos:below="$id:header"
        />

</DependentLayout>