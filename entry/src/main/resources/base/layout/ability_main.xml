<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="bottom"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:header"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:align_parent_start="true">

        <Text
            ohos:id="$+id:header_title_text"
            ohos:height="match_parent"
            ohos:width="200vp"
            ohos:text_size="20fp"
            ohos:text_alignment="vertical_center"
            ohos:margin="5vp"
            ohos:text="Title"
            ohos:background_element="#FAD815"/>

        <DependentLayout
            ohos:id="$+id:header_button_area"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:right_of="$id:header_title_text"
            ohos:margin="5vp"
            ohos:background_element="#AD1017">

        </DependentLayout>

    </DependentLayout>

    <TabList
        ohos:id="$+id:bottom_nav_bar"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal"

        ohos:background_element="#C902062B"
        ohos:text_size="18vp"
        ohos:text_alignment="center"
        ohos:fixed_mode="true"

        ohos:selected_text_color="#FFF3F8FF"
    />


    <StackLayout
        ohos:id="$+id:stack_layout"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="#66000000"
        ohos:text_size="16fp"
        ohos:layout_alignment="center"
        ohos:text_alignment="center"
        ohos:above="$id:bottom_nav_bar"
        ohos:below="$id:header"
        />

</DependentLayout>