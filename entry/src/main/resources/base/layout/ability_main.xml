<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="bottom"
    ohos:orientation="vertical">

    <TabList
        ohos:id="$+id:bottom_nav_bar"
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal"

        ohos:background_element="#C902062B"
        ohos:text_size="20vp"
        ohos:text_alignment="center"
        ohos:fixed_mode="true"
    />


    <StackLayout
        ohos:id="$+id:stack_layout"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:text_color="#FF0FFF"
        ohos:background_element="#FAD815"
        ohos:text_size="20vp"
        ohos:layout_alignment="center"
        ohos:text_alignment="center"
        ohos:above="$id:bottom_nav_bar"/>

</DependentLayout>