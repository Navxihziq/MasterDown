<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:editor_header"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:align_parent_start="true">

        <Text
            ohos:id="$+id:editor_title_text"
            ohos:height="match_parent"
            ohos:width="200vp"
            ohos:text_size="20fp"
            ohos:align_parent_top="true"
            ohos:text_alignment="vertical_center"
            ohos:left_margin="20vp"
            ohos:text="Title"/>

        <DependentLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="end"
            ohos:right_of="$id:editor_title_text">

            <Image
                ohos:id="$+id:editor_reformat_button"
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:vertical_center="true"
                ohos:left_of="$id:editor_save_button"
                ohos:right_margin="30vp"
                ohos:scale_mode="zoom_center"
                ohos:image_src="$media:reformat"
                ohos:clickable="true"/>

            <Image
                ohos:id="$+id:editor_save_button"
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:image_src="$media:save"
                ohos:scale_mode="zoom_center"
                ohos:align_parent_end="true"
                ohos:right_margin="10vp"
                ohos:vertical_center="true"
                ohos:clickable="true"/>

        </DependentLayout>

    </DependentLayout>

    <TextField
        ohos:id="$+id:editor_textfield"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:below="$id:editor_header"
        ohos:background_element="#FAAF00"
        ohos:text_size="20fp"
        ohos:hint="Insert Text Here"/>

    <ListContainer
        ohos:id="$+id:editor_toolbar"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal"
        ohos:background_element="#FAD815"/>


</DependentLayout>